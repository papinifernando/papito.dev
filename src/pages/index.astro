---
import config from "@/consts.ts";
import Header from "@/components/Header.astro";
import Layout from "@/layouts/Layout.astro";
import Me from "@/components/Me";
import { cn } from "@/lib/utils";

const { links } = config;
---

<Layout
  title={config.head.title}
  description={config.head.description}
  image={config.head.image}
>
  <div class="page max-w-xs mx-auto px-2 md:px-0 antialiased">
    <Header />

    <div class="grid gap-12">
      <div class="text-center">
        <Me className="mx-auto w-36 h-36" />
        <div class="mb-2 mt-4 text-xl font-bold text-white">Fernando Papito</div>
        <p class="leading-tight text-muted-foreground">
          🚀 QA Lead & SDET <br />
          Apaixonado por Qualidade de Software 😍 <br />
        </p>
      </div>

      <main class="grid gap-2 text-center">
        {
          links.primary.map(async (link) => (
            <a
              class={cn(
                `border rounded border-zinc-300 p-4 hover:bg-zinc-800 border-zinc-800`,
                link.colors?.background
              )}
              href={link.url}
              target="_blank"
            >
              <strong class={cn(`font-bold text-white text-lg`, link.colors?.title)}>
                {link.title}
              </strong>
              <p class={cn("text-muted-foreground", link.colors?.description)}>
                {link.description}
              </p>
            </a>
          ))
        }
      </main>

      <footer class="flex flex-wrap gap-2 justify-center mb-20">
        {
          links.social.map((link) => (
            <a class="border rounded border-zinc-800  p-3 hover:bg-zinc-700" href={link.url} target="_blank">
              <link.icon strokeWidth={1} />
              <p class="sr-only">{link.title}</p>
            </a>
          ))
        }
      </footer>
    </div>
  </div>
</Layout>
